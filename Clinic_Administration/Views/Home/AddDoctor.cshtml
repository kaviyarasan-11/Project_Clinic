@model Clinic_1.Models.Doctor
<style>
    con {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    .container {
        border-radius: 5px;
        background-color: whitesmoke;
        padding: 20px;
    }

    footer {
        position: relative;
        width: 100%;
        font-size: small;
        left: 0;
        bottom: 0;
        text-align: left;
        background-color: darkgrey;
    }

    .gap {
        position: relative;
        width: 100%;
        font-size: small;
        left: 0;
        bottom: 0;
        text-align: center;
    }
</style>
