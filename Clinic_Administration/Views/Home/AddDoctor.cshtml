</body>
<br />
<br/>

<div class="container-fluid bg-light con">
    <div class="row py-2 px-lg-3 ">
        @*<img src="~/Image/doctor_logo.jpg" width="60" height="60" />*@
        <h2 class="m-0 text-secondary"><span class="text-primary"> Add </span>Doctor </h2>
    </div>
</div>


<br />
<br />
<div>
    <table class="table">

        @using (Html.BeginForm("DoctorList", "Home", FormMethod.Post))
        {
            <tr>
                <th>
                    @Html.DisplayName("First Name")
                </th>
                <td style="background-color:gray">

                    @Html.TextBoxFor(modelItem => Model.FirstName, new { required = "required" })

                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayName("Last Name")
                </th>
                <td style="background-color:gray">

                    @Html.TextBoxFor(modelItem => Model.LastName, new { required = "required" })

                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Sex")
                </th>
                <th style="background-color:gray">
                    <select name="Sex">
                        <option value="Gender">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                    </select>
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Specialization")
                </th>
                <th style="background-color:gray">

                    <select name="Specialization">
                        <option value="Select Specialization">Select Specialization</option>
                        <option value="General">General</option>
                        <option value="Internal Medicine">Internal Medicine</option>
                        <option value="Pediatrics">Pediatrics</option>
                        <option value="Orthopedics">Orthopedics</option>
                        <option value="Ophthalmology">Ophthalmology</option>
                    </select>


                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("ScheduleTime")
                </th>
                <th style="background-color:gray">
                    <select name="ScheduleTime">
                        <option value="Visting Hours">Visiting Hours</option>
                        <option value="10.00 AM-11.00 AM">10.00 AM-11.00 AM</option>
                        <option value="11.00 AM-12.00 PM">11.00 AM-12.00 PM</option>
                        <option value="03.00 PM-04.00 PM">03.00 PM-04.00 PM</option>
                        <option value="04.00 PM-05.00 PM">04.00 PM-05.00 PM</option>
                    </select>
                </th>
            </tr>
            <tr>
                <td align="center" colspan="2" rowspan="3">

                    <input type="submit" value="Create" class="btn btn-primary py-2 px-4 d-none d-lg-block" />
                </td>
            </tr>
            <tbody>
            </tbody>

        }
    </table>
</div>
<br />
<br />
<br />
<footer class="container-fluid">
    <div style="background-color:black" class="gap">
        <p style="color:whitesmoke">&copy;Copyright 2022.All Rights Reserved &nbsp; &nbsp;|&nbsp;&nbsp;<span style="color:red">Stone Clinic</span></p>
    </div>
</footer>










