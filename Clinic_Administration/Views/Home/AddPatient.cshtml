                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle  " id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true">
                                MENU
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="AddDoctor" asp-controller="Home">Add Doctor</a>
                                <a class="dropdown-item alert-primary badge-secondary" asp-action="AddPatient" asp-controller="Home">Add Patient</a>
                                @*<div class="dropdown-divider"></div>*@
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="Appointment" asp-controller="Home">Appointment</a>
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="CancelAppoint" asp-controller="Home">Cancel</a>
                                <div class="">
                                    <a class="dropdown-item alert-dark badge-danger" asp-action="Login" asp-controller="Home">Log Out</a>
                                </div>

                            </div>
                        </li>

                    </ul>

                </div>

            </nav>
        </header>
</body>
<br/>
<br/>
<div class="container-fluid bg-light con">
    <div class="row py-2 px-lg-3 ">
        @*<img src="~/Image/doctor_logo.jpg" width="60" height="60" />*@
        <h2 class="m-0 text-secondary"><span class="text-primary"> Add </span>Patient </h2>
    </div>
</div>
<br />
<br />

<div>
    <table class="table">

        @using (Html.BeginForm("PatientList", "Home", FormMethod.Post))
        {
            <tr>
                <th>
                    @Html.DisplayName("First Name")
                </th>
                <td style="background-color:gray">

                    @Html.TextBoxFor(modelItem => Model.FirstName, new { required = "required" })

                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayName("Last Name")
                </th>
                <td style="background-color:gray">

                    @Html.TextBoxFor(modelItem => Model.LastName, new { required = "required" })

                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Sex")
                </th>
                <th style="background-color:gray">
                    <select name="Sex">
                        <option value="Gender">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                    </select>
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("Age")
                </th>
                <td style="background-color:gray">

                    @Html.TextBoxFor(modelItem => Model.Age, new { required = "required" })

                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("DOB")
                </th>
                <td style="background-color:gray">
                    &nbsp;&nbsp;
                    <input asp-for="DOB" type="date" required />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </td>

                @*<td style="background-color:gray">
                    @Html.TextBoxFor(modelItem => Model.DOB)
                </td>*@
            </tr>
            <tr>
                <td align="center" colspan="2" rowspan="3">
                    <center>
                        <input type="submit" value="Create" class="btn btn-primary py-2 px-4 d-none d-lg-block" />
                    </center>
                </td>
            </tr>
            <tbody>
            </tbody>

        }
    </table>
</div>
<footer class="container-fluid">
    <div style="background-color:black" class="gap">
        <p style="color:whitesmoke">&copy;Copyright 2022.All Rights Reserved &nbsp; &nbsp;|&nbsp;&nbsp;<span style="color:red">Stone Clinic</span></p>
    </div>
</footer>
