                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true">
                                MENU
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="AddDoctor" asp-controller="Home">Add Doctor</a>
                                <a class="dropdown-item alert-primary badge-secondary" asp-action="AddPatient" asp-controller="Home">Add Patient</a>
                                @*<div class="dropdown-divider"></div>*@
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="Appointment" asp-controller="Home">Appointment</a>
                                <a class="dropdown-item  alert-primary badge-secondary" asp-action="CancelAppoint" asp-controller="Home">Cancel</a>
                                <div class="">
                                    <a class="dropdown-item alert-dark badge-danger" asp-action="Login" asp-controller="Home">Log Out</a>
                                </div>

                            </div>
                        </li>

                    </ul>

                </div>

            </nav>
        </header>
</body>
<br />
<br />
<div class="container-fluid bg-light con">
    <div class="row py-2 px-lg-3 ">
        @*<img src="~/Image/doctor_logo.jpg" width="60" height="60" />*@
        <h2 class="m-0 text-secondary"><span class="text-primary"> Cancel </span>Appointment </h2>
    </div>
</div>

<br />
<br />

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("AppointmentID")
            </th>
            <th>
                @Html.DisplayName("PatientId")
            </th>
            <th>
                @Html.DisplayName("PatientName")
            </th>
            <th>
                @Html.DisplayName("Doctor")
            </th>
            <th>
                @Html.DisplayName("Specialization")
            </th>
            <th>
                @Html.DisplayName("VisitDate")
            </th>
            <th>
                @Html.DisplayName("AppointmentTime")
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.AppointmentID)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.PatientID)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.Doctor)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.Specialization)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.VisitDate)
                </td>
                <td style="background-color:">
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td lign="center" colspan="2" rowspan="3" class="">
                   
                    <a asp-action="DeleteList" asp-controller="Home" asp-route-id="@item.PatientID">
                        <input type="submit" value="Delete" class="badge-danger" />
                      
                    </a>

                    
                </td>
            </tr>
        }
    </table>
</div>
<footer class="container-fluid">
    <div style="background-color:black" class="gap">
        <p style="color:whitesmoke">&copy;Copyright 2022.All Rights Reserved &nbsp; &nbsp;|&nbsp;&nbsp;<span style="color:red">Stone Clinic</span></p>
    </div>
</footer>
